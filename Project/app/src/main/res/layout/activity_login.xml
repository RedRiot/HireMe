<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.example.tung.hireme.Activities.activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginBottom="36dp"
        app:srcCompat="@drawable/green_fox_logo" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="220dp"
        android:layout_height="35dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="253dp"
        android:background="#ffff"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#34ad64"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_below="@+id/mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#ffff"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="@string/passsword"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#34ad64"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/cardview_dark_background"
        android:text="No account yet? Create one."
        android:textSize="16dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        app:srcCompat="@drawable/logo_text" />


</RelativeLayout>
