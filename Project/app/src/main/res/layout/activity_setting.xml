<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tung.hireme.Activities.activities.EditProfileActivity"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:padding="20sp">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/summaries"
        android:layout_alignEnd="@+id/summaries"
        android:layout_alignRight="@+id/summaries"
        android:layout_marginBottom="12dp"
        android:background="#fff"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#34ad64"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/summaries"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/confirm"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:background="#fff"
        android:hint="Summary"
        android:textColor="#000000"
        android:inputType="textImeMultiLine"
        android:textColorHint="#34ad64"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="169dp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:text="confirm"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="209dp" />


</RelativeLayout>
